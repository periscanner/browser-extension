{
  "manifest_version": 3,
  "name": "periscanner",
  "version": "1.0.0",
  "icons": {
    "48": "public/logo/LOGO_CIRCLE_48x48.png"
  },
  "action": {
    "default_icon": {
      "48": "public/logo/LOGO_CIRCLE_48x48.png"
    }
  },
  "content_scripts": [
    {
      "js": [
        "src/content/main.ts-loader.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "contentSettings",
    "storage",
    "tabs"
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": false
    }
  ]
}
