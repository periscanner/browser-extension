{
  "manifest_version": 3,
  "name": "periscanner-extension",
  "version": "0.0.1",
  "icons": {
    "48": "public/logo/LOGO_CIRCLE_48x48.png"
  },
  "action": {
    "default_icon": {
      "48": "public/logo/LOGO_CIRCLE_48x48.png"
    }
  },
  "permissions": [
    "sidePanel",
    "contentSettings"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "src/content/main.tsx-loader.js"
      ],
      "matches": [
        "https://axiom.trade/*",
        "https://trade.padre.gg/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": false
    }
  ]
}
